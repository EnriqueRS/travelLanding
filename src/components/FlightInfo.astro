---
const flights = [
  {
    title: "Ida",
    segments: [
      {
        title: "Málaga (AGP) → Múnich (MUC)",
        detail: "dom 29 mar 2026 14:35 – 17:30 (CEST)",
        note: "Escala",
      },
      {
        title: "Múnich (MUC) → Pekín (PEK)",
        detail: "dom 29 mar 19:40 – lun 30 mar 2026 05:45 (CEST)",
      },
    ],
  },
  {
    title: "Vuelta",
    segments: [
      {
        title: "Shanghái (PVG) → Zúrich (ZRH)",
        detail: "jue 9 abr 2026 04:05 – 18:15 (CEST)",
        note: "Escala",
      },
      {
        title: "Zúrich (ZRH) → Málaga (AGP)",
        detail: "jue 9 abr 21:30 – vie 10 abr 2026 00:10 (CEST)",
      },
    ],
  },
